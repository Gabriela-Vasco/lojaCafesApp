@page
@model lojaCafesApp.Pages.Torras.CreateModel

@{
    ViewData["Title"] = "Adicionar";
}
<div style="margin: 5rem;" class="d-flex flex-column">
    <h4>Adicionar uma nova torra de caf√©</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TorraCafe.Nome" class="control-label mb-3"></label>
                    <input asp-for="TorraCafe.Nome" class="form-control" />
                    <span asp-validation-for="TorraCafe.Nome" class="text-danger"></span>
                </div>
                <div class="form-group  mt-3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="Index">Voltar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
